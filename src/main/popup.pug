mixin tab(props = {})
  li(class=attributes.class)
    a(data-content=props.for)
      span.icon.is-small
        i(class=props.icon)
      span= props.title

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="popup.css")
  body
    .tabs
      ul
        +tab({
          for: 'options-content',
          icon: 'icon-tasks',
          title: 'Options'
        })(class='is-active')
        +tab({
          for: 'download-videos-fb-content',
          icon: 'icon-download',
          title: 'Download Facebook stories'
        })

    .content
      ul#download-videos-fb-content.content-block.has-scrollbar.is-hidden

      -
        const options = [
          'Block the "seen" feature of the chat',
          'Block the "delivery receipts" feature of the chat',
          'Block the typing indicator feature of the chat',
          'Block the "seen" feature of the story',
          'Hide your active status',
          'Block Facebook pixel',
          'Stop "up next" video',
          'Hide comments (experimental)',
        ]

      #options-content.content-block.is-flex
        .menu.has-scrollbar
          p.menu-label activity
          ul.menu-list
            - for (let i = 0; i < 4; i++)
              li
                label.checkbox.is-checked
                  input.option(type="checkbox", value=i)
                  span= options[i]
          p.menu-label privacy
          ul.menu-list
            li
              label.checkbox
                input.option(type="checkbox", value=5)
                span= options[5]
          p.menu-label other
          ul.menu-list
            - for (let i = 6; i < 8; i++)
              li
                label.checkbox
                  input.option(type="checkbox", value=i)
                  span= options[i]
          p.is-size-7.has-text-danger.mt-4 Experimental features may cause unexpected behavior, be careful when using and feel free to report bugs to me

    footer.footer
      .content.has-text-centered
        a(href='https://addons.mozilla.org/en-US/firefox/addon/facebook-utils/') Rate me

    script(async src='popup.js')