{
  "manifest_version": 2,
  "name": "Facebook utils",
  "version": "1.4.0",
  "description": "Make Facebook yours",
  "author": "Phạm Trung Kiên",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "downloads",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "main/popup.html",
    "default_title": "Facebook utils",
    "default_icon": "icons/icon-48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}