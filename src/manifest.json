{
  "manifest_version": 2,
  "name": "Facebook utils",
  "version": "1.1.0",
  "description": "Controls how you surf Facebook",
  "author": "Phạm Trung Kiên",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.facebook.com/*",
    "*://*.messenger.com/*"
  ],
  "content_scripts": [{
    "js": ["/content-scripts/remove-fbclid.js"],
    "matches": [
      "*://*.facebook.com/*",
      "*://*.messenger.com/*"
    ],
    "run_at": "document_end"
  }],
  "browser_action": {
    "default_popup": "main/popup.html",
    "default_title": "Facebook utils",
    "default_icon": "icons/icon-48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}