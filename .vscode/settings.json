{
  "files.exclude": {
    "**/node_modules/{[^b],?[^u],??[^l],???[^m]}*": true,
    ".jsbeautifyrc": true,
    ".gitignore": true,
    ".eslintrc.json": true,
    "babel.config.json": true,
    "INSTRUCTIONS.md": true,
    "yarn.lock": true
  },
  "path-autocomplete.transformations": [{
    "type": "replace",
    "parameters": ["^_", ""],
    "when": {
      "fileName": "\\.scss$"
    }
  }],
  "path-autocomplete.pathMappings": {
    "~bulma": "${workspace}/node_modules/bulma"
  },
  "beautify.ignore": ["**/build/**"]
}